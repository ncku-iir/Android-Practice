<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:background="@drawable/bg_daysun"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp"></LinearLayout>

    <ImageButton
        android:id="@+id/home_Button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/background"
        app:srcCompat="@drawable/back_white" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="台南市"
        android:textColor="#FFFFFF"
        android:textSize="42dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/home_Button"
        app:layout_constraintTop_toTopOf="@id/background" />

    <TextView
        android:id="@+id/todayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="7/11"
        android:textColor="#FFFFFF"
        android:textSize="48dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintTop_toTopOf="@+id/background" />


    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="27°C"
        android:textColor="#FFFFFF"
        android:textSize="100dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/background"
        app:layout_constraintStart_toEndOf="@+id/home_Button"
        app:layout_constraintTop_toBottomOf="@+id/location"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/dayTextView1"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:gravity="center"
        android:text="7/12"
        android:textColor="#878787"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/dayTextView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/background" />

    <ImageView
        android:id="@+id/condImageView1"
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toStartOf="@+id/dayTextView2"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="@+id/dayTextView1"
        app:layout_constraintTop_toBottomOf="@+id/dayTextView1"
        app:srcCompat="@drawable/cond_cloud" />

    <TextView
        android:id="@+id/tempTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="25°c"
        android:textColor="#878787"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dayTextView2"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="@+id/dayTextView1"
        app:layout_constraintTop_toBottomOf="@+id/condImageView1"
        app:layout_constraintVertical_bias="0.071" />

    <TextView
        android:id="@+id/dayTextView2"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="7/13"
        android:textColor="#878787"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/dayTextView1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="@+id/dayTextView1"
        app:layout_constraintRight_toLeftOf="@+id/dayTextView3"
        app:layout_constraintStart_toEndOf="@+id/dayTextView1"
        app:layout_constraintTop_toTopOf="@+id/dayTextView1" />

    <ImageView
        android:id="@+id/condImageView2"
        android:layout_width="125dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="@+id/condImageView1"
        app:layout_constraintEnd_toEndOf="@+id/dayTextView2"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="@+id/dayTextView2"
        app:layout_constraintTop_toTopOf="@+id/condImageView1"
        app:srcCompat="@drawable/cond_cloud" />

    <TextView
        android:id="@+id/tempTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="25°c"
        android:textColor="#878787"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tempTextView1"
        app:layout_constraintEnd_toStartOf="@+id/dayTextView3"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="@+id/dayTextView2"
        app:layout_constraintTop_toTopOf="@+id/tempTextView1"
        app:layout_constraintVertical_bias="0.098" />

    <TextView
        android:id="@+id/dayTextView3"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="7/14"
        android:textColor="#878787"

        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/dayTextView2"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="@+id/dayTextView2"
        app:layout_constraintRight_toLeftOf="@+id/dayTextView4"
        app:layout_constraintStart_toEndOf="@+id/dayTextView2"
        app:layout_constraintTop_toTopOf="@+id/dayTextView2" />

    <ImageView
        android:id="@+id/condImageView3"
        android:layout_width="125dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="@+id/condImageView2"
        app:layout_constraintEnd_toStartOf="@+id/dayTextView4"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="@+id/dayTextView3"
