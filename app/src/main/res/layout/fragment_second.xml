        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="25°c"
        android:textColor="#878787"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tempTextView3"
        app:layout_constraintEnd_toStartOf="@+id/dayTextView5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="@+id/dayTextView4"
        app:layout_constraintTop_toTopOf="@+id/tempTextView3"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/dayTextView5"
        android:layout_width="204dp"
