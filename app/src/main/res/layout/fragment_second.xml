        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/dayTextView3"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="@+id/dayTextView3"
        app:layout_constraintRight_toLeftOf="@+id/dayTextView5"
        app:layout_constraintStart_toEndOf="@+id/dayTextView3"
        app:layout_constraintTop_toTopOf="@+id/dayTextView3" />

    <ImageView
        android:id="@+id/condImageView4"
        android:layout_width="125dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="@+id/condImageView3"
        app:layout_constraintEnd_toStartOf="@+id/dayTextView5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="@+id/dayTextView4"
