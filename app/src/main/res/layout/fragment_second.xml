        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/condImageView6"
        android:layout_width="125dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="@+id/condImageView5"
        app:layout_constraintEnd_toEndOf="@+id/dayTextView6"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/condImageView5"
        app:layout_constraintStart_toStartOf="@+id/dayTextView6"
        app:layout_constraintTop_toTopOf="@+id/condImageView5"
